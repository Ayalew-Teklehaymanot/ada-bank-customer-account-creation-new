            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
	(vars.inpPayload map {
		
	"message": "Account Created With Account Number - " ++ $.custAccNum ++ " in " ++ vars.bank
}
)
}]]></ee:set-payload>
